import sys
import os

thisfile = os.path.basename(sys.argv[0])
root, ext = os.path.splitext(thisfile)
what = sys.argv[1]

h = [
    '#ifndef '+root+'_h',
    '#define '+root+'_h',
    '',
    'void '+root+'();',
    '',
    '#endif'
]

cc = [
    '#include "'+root+'.h"',
    '',
    'void '+root+'();'
    ]

if what == 'h': print '\n'.join(h)
elif what == 'cc': print '\n'.join(cc)
else: assert 0
